	<div class="limiter">
		<div class="container-login100" style="background-image: url( <%= asset_path('bg-02.jpg') %>);">
			<div class="wrap-login100">
			<%= form_for @user do |f| %>
					<span class="login100-form-logo">
						<i class="zmdi zmdi-landscape" style="content: url( <%= asset_path('logo.jpg') %>); height: 130px; weight: 130px"></i>
					</span>
					<br>
					<span class="login100-form-title p-b-34 p-t-27">
						J.T.S
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Enter username">
						<%= f.text_field :name, class: "input100", placeholder: "username"%>
						<span class="focus-input100" data-placeholder="&#xf207;"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Enter password">
						<%= f.password_field :password, class: "input100",placeholder: "password" %>
						<span class="focus-input100" data-placeholder="&#xf191;"></span>
					</div>

					<div class="container-login100-form-btn">
					<%= f.submit "Sign Up", class: "login100-form-btn" %>
					<% end %>
					</div>
				</form>
			</div>
		</div>
	</div>
