 <div class="container">    <h1>Create new user</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <br>
  <%= f.label :password %>
  <%= f.text_field :password %> "Min 1 Character"<br>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.submit %>
<% end %>
</div>
