<div class="container text-center">
<h1>Welcome <%= @user.name%></h1>

<h3 class="h3">Adoption List</h3>
<table style="width:100%">
  <thead class="black-white-text">
    <tr>
      <th>Pet Name</th>
      <th>Pet Type</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Status</th>
    </tr>
  </thead>
<% @user.adoptor_pets.where(status: false).each do |pet| %>
<tr>
  <td><%= pet.name %></td>
  <td><%= pet.animal_type %></td>
  <td><%= pet.age %></td>
  <td><%= pet.gender %></td>
  <td><%= "You have adopted #{pet.name} at #{pet.adoptions.last.adoption_date}" %></td>
</tr>
  <% end %>
</table>
<br>
<br>
<h3 class="h3">New Given List</h3>
<table style="width:100%">
  <thead class="black-white-text">
    <tr>
      <th>Pet Name</th>
      <th>Pet Type</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Status</th>
    </tr>
  </thead>
<% @user.giver_pets.each do |pet| %>
<tr>
  <td><%= pet.name %></td>
  <td><%= pet.animal_type %></td>
  <td><%= pet.age %></td>
  <td><%= pet.gender %></td>
  <td><%= "You have given #{pet.name} at #{pet.givings.last.giving_date}" %></td>
</tr>
<% end %>
</table>

<div class="middle_link">
<%= link_to "Back to Home Page", stores_path%><br>
<%= link_to "Log out", logout_path, method: :delete%>

</div>
</div>
